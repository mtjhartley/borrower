@model borrower.Models.BorrowerRegisterViewModel

<div class="col-md-6">
    <h2>Need money? Register here, young borrower!</h2>
    <form asp-controller="User" asp-action="HandleRegisterBorrower" method='post'>
        <div class='form-group'>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class='form-group'>
            <label asp-for="LastName"></label>
            <input asp-for="LastName"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Email"></label>
            <input asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Password"></label>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class='form-group'>
            <label asp-for="PasswordConfirmation"></label>
            <input asp-for="PasswordConfirmation" type='password'>
            <span asp-validation-for="PasswordConfirmation"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Amount"></label>
            <input asp-for="Amount" type='number' step='1' min='1'>
            <span asp-validation-for="Amount"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Reason"></label>
            <input asp-for="Reason">
            <span asp-validation-for="Reason"></span>
        </div>
        <div class='form-group'>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>

        <button class='btn btn-default' type='submit'>Register Now as a Borrower!</button>
    </form>

<a href="/login">Already exist?</a>
<a href="/">Register as a lender</a>
</div>
